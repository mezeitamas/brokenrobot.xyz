---
import { SITE_METADATA } from '../consts';

type Props = {
    date: Date;
    locale?: string;
};

const { date, locale } = Astro.props;
---

<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString(locale ?? SITE_METADATA.LANGUAGE, {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        })
    }
</time>
