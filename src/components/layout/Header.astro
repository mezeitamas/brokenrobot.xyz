---
type Props = {
    title: string;
};

const { title } = Astro.props;
---

<style>
    ul a {
        @apply inline-flex h-12 min-h-12 shrink-0 cursor-pointer flex-wrap items-center justify-center rounded-xl px-4 text-center;

        &:hover,
        &:focus {
            @apply bg-slate-100;
        }
    }
</style>

<header class="flex items-center sm:h-24 sm:min-h-24">
    <nav class="flex grow flex-col justify-between sm:flex-row">
        <div class="flex h-12 min-h-12 items-center text-2xl font-bold">
            <a href="/">{title}</a>
        </div>

        <div>
            <ul class="flex flex-row justify-between gap-6 sm:gap-10">
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/blog">Blog</a>
                </li>
                <li>
                    <a href="/about">About</a>
                </li>
            </ul>
        </div>
    </nav>
</header>
