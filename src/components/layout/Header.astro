---
import InternalLink from '../links/InternalLink.astro';

type Props = {
    title: string;
};

const { title } = Astro.props;
---

<header class="mb-12 mt-6 flex flex-col gap-4 leading-8">
    <nav class="flex flex-col justify-between gap-4 whitespace-nowrap sm:flex-row">
        <div class="text-2xl font-bold text-gray-900">
            <InternalLink href="/">{title}</InternalLink>
        </div>

        <div class="flex flex-nowrap gap-6 text-gray-600 sm:gap-10">
            <InternalLink href="/">Home</InternalLink>
            <InternalLink href="/blog">Blog</InternalLink>
            <InternalLink href="/about">About</InternalLink>
        </div>
    </nav>

    <hr />
</header>
