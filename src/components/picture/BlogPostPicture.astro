---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';

import { SITE_METADATA } from '../../consts';

type Props = {
    src: ImageMetadata;
    alt: string;
};

const { src, alt } = Astro.props;
---

<Picture
    src={src}
    alt={alt}
    formats={['avif', 'webp']}
    widths={SITE_METADATA.SRC_SET_BREAKPOINTS}
    loading="lazy"
    decoding="async"
/>
