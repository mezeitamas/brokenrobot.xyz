{
    "name": "brokenrobot.xyz",
    "description": "Tamas Mezei's personal website.",
    "version": "2.0.0",
    "private": true,
    "author": "Tamas Mezei",
    "repository": {
        "type": "git",
        "url": "git@github.com:mezeitamas/brokenrobot.xyz.git"
    },
    "type": "module",
    "scripts": {
        "postinstall": "playwright install --with-deps",
        "clean": "rimraf dist/ reports/ .astro/ .cache/ test-results/ playwright-report/",
        "format:check": "prettier '**/*.{astro,js,jsx,ts,tsx,cjs,mjs,json,md,mdx,yml}' --check",
        "format:fix": "prettier '**/*.{astro,js,jsx,ts,tsx,cjs,mjs,json,md,mdx,yml}' --write",
        "lint:check": "astro sync && eslint 'src/**/*.{astro,ts}'",
        "type:check": "astro check && tsc --noEmit",
        "test:e2e:check": "playwright test",
        "audit:check": "npm audit --package-lock-only --omit=dev",
        "build": "astro build",
        "serve": "astro preview",
        "start": "astro dev",
        "astro": "astro"
    },
    "dependencies": {
        "@astrojs/check": "0.2.1",
        "@astrojs/mdx": "1.1.2",
        "@astrojs/rss": "3.0.0",
        "@astrojs/sitemap": "3.0.1",
        "@astrojs/tailwind": "5.0.2",
        "@astrojs/ts-plugin": "1.2.0",
        "@tailwindcss/typography": "0.5.10",
        "astro": "3.3.0",
        "astro-feather": "1.0.0",
        "schema-dts": "1.1.2",
        "tailwindcss": "3.3.3"
    },
    "devDependencies": {
        "@axe-core/playwright": "4.8.1",
        "@playwright/test": "1.39.0",
        "@types/markdown-it": "13.0.2",
        "@types/sanitize-html": "2.9.2",
        "@typescript-eslint/eslint-plugin": "6.8.0",
        "@typescript-eslint/parser": "6.8.0",
        "dotenv": "16.3.1",
        "eslint": "8.51.0",
        "eslint-import-resolver-typescript": "3.6.1",
        "eslint-plugin-astro": "0.29.1",
        "eslint-plugin-import": "2.28.1",
        "eslint-plugin-jsx-a11y": "6.7.1",
        "eslint-plugin-tailwindcss": "3.13.0",
        "markdown-it": "13.0.2",
        "prettier": "3.0.3",
        "prettier-plugin-astro": "0.12.0",
        "prettier-plugin-sh": "0.13.1",
        "prettier-plugin-tailwindcss": "0.5.6",
        "rimraf": "5.0.5",
        "sanitize-html": "2.11.0",
        "typescript": "5.2.2"
    }
}
