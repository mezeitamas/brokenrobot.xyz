{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "noEmit": true,
        "strictNullChecks": true,
        "verbatimModuleSyntax": true,
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@styles/*": ["src/styles/*"]
        },
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ]
    }
}
