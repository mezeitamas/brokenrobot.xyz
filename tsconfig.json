{
    "include": ["./src/**/*", "./tests/**/*", "./gatsby-config.ts"],
    "exclude": ["node_modules", "*.config.js"],
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "esnext"],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["react", "react-dom", "jest", "react-test-renderer"]
    }
}
